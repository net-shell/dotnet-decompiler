<UserControl x:Class="XapEditor.controls.MetroTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <Grid Margin="2">
        <Grid x:Name="bor"/>
        <Grid>
            <Grid x:Name="grr" Background="White" Opacity="0" />
            <TextBlock x:Name="txt" Style="{StaticResource MetroTitle}" IsHitTestVisible="False" />
            <Image x:Name="img" Style="{StaticResource MetroIcon}" IsHitTestVisible="False" />
        </Grid>
    </Grid>
</UserControl>
